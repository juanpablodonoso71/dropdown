import 'package:flutter/material.dart';

class DashboardVideo extends StatefulWidget {
  @override
  _DashboardStateVideo createState() {
    return _DashboardStateVideo();
  }
}

class _DashboardStateVideo extends State<DashboardVideo> {
  Material myItems(String heading, String photo) {
    return Material(
      //color: Colors.lightGreen,
      child: Center(
        child: Padding(
          padding: const EdgeInsets.all(0),
          child: Row(
            mainAxisAlignment: MainAxisAlignment.center,
            children: <Widget>[
              Column(
                //mainAxisAlignment: MainAxisAlignment.center,
                children: <Widget>[
                  Expanded(
                    child: Container(
                      //decoration: BoxDecoration(color: Colors.deepPurple),
                      child: Image.asset(photo, fit: BoxFit.cover),
                    ),
                  ),
                  Padding(
                    padding: const EdgeInsets.only(top: 20.0),
                    child: Text(
                      heading,
                      style: TextStyle(
                          fontFamily: 'Avenir',
                          fontSize: 12.0,
                          letterSpacing: 1.4,
                          fontWeight: FontWeight.w500),
                    ),
                  ),
                ],
              )
            ],
          ),
        ),
      ),
    );
  }

  @override
  Widget build(BuildContext context) {
    return Container(
      padding: EdgeInsets.all(15),
      child: GridView.count(
        crossAxisCount: 3,
        mainAxisSpacing: 50,
        crossAxisSpacing: 20,
        childAspectRatio: 0.90,
        padding: EdgeInsets.symmetric(horizontal: 25.0, vertical: 25.0),
        children: <Widget>[
          InkWell(
            child: myItems("INTRODUCTION", 'lib/jpg/video_intro_play.jpg'),
            onTap: () {
              Navigator.of(context).pushNamed('/vid_intro');
            },
          ),
          InkWell(
            child: myItems("CHEST", 'lib/jpg/video_chest_play.jpg'),
            onTap: () {
              Navigator.of(context).pushNamed('/vid_chest');
            },
          ),
          InkWell(
            child: myItems("SHOULDERS", 'lib/jpg/video_shoulder_play.jpg'),
            onTap: () {
              Navigator.of(context).pushNamed('/vid_shoulders');
            },
          ),
          InkWell(
            child: myItems("WAIST", 'lib/jpg/video_waist_play.jpg'),
            onTap: () {
              Navigator.of(context).pushNamed('/vid_waist');
            },
          ),
          InkWell(
            child: myItems("NECK", 'lib/jpg/video_neck_play.jpg'),
            onTap: () {
              Navigator.of(context).pushNamed('/vid_neck');
            },
          ),
        ],
      ),
    );
  }
}
